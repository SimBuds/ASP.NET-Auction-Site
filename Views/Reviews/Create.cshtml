@using System.Security.Claims;
@model web_project.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<div class="container">
    <div class="row">
            <h3>Submit a Review</h3>
            <form asp-controller="Reviews" asp-action="Create" method="post">
                <input type="hidden" asp-for="AuctionId" value="@Model.AuctionId" />
                <input type="hidden" asp-for="ReviewerId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                <input type="hidden" asp-for="RevieweeId" value="@Model.RevieweeId" />
                <div class="form-group">
                    <label asp-for="Rating">Rating:</label>
                    <select asp-for="Rating" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div> 
                <div class="form-group">
                    <label asp-for="Comment">Comment:</label>
                    <textarea asp-for="Comment" maxlength="1000" rows="3" cols="40" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Review</button>
            </form>
        </div>
</div>
